{
  "name": "notion-formatter",
  "module": "index.ts",
  "main": "electron/main.js",
  "version": "1.0.0",
  "author": "Seth",
  "description": "Notion Formatter",
  "keywords": [
    "notion",
    "formatter"
  ],
  "scripts": {
    "email": "bun run server.ts",
    "electron": "electron .",
    "build:mac": "electron-builder --mac --arm64 --x64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@notionhq/client": "^4.0.1",
    "dotenv": "^17.2.1",
    "puppeteer": "^24.16.0"
  },
  "build": {
    "appId": "com.example.notionformatter",
    "productName": "Notion Formatter",
    "files": [
      "public/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
